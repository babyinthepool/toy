    <script>
    function updateCoverPreview() {
        const url = document.getElementById('cover').value.trim();
        const preview = document.getElementById('cover-preview');
        preview.innerHTML = url
            ? `<img src="${url}" alt="Poster" style="max-width:100%;max-height:240px;border-radius:8px;">`
            : `<span class="text-muted">Poster görünəcək</span>`;
    }
    function updateGameplayPreview() {
        const url = document.getElementById('gameplayEmbed').value.trim();
        const preview = document.getElementById('gameplay-preview');
        let embedUrl = '';
        if (url.includes('youtube.com/embed/')) {
            embedUrl = url;
        } else if (url.includes('youtube.com/watch?v=')) {
            const vid = url.split('v=')[1].split('&')[0];
            embedUrl = `https://www.youtube.com/embed/${vid}`;
        } else if (url.includes('youtu.be/')) {
            const vid = url.split('youtu.be/')[1].split('?')[0];
            embedUrl = `https://www.youtube.com/embed/${vid}`;
        }
        preview.innerHTML = embedUrl
            ? `<iframe width="100%" height="240" src="${embedUrl}" frameborder="0" allowfullscreen></iframe>`
            : `<span class="text-muted">YouTube embed görünəcək</span>`;
    }
    function updateImagesPreview() {
        const val = document.getElementById('images').value.trim();
        const preview = document.getElementById('images-preview');
        if (!val) {
            preview.innerHTML = `<span class="text-muted">Rəsimlər görünəcək</span>`;
            return;
        }
        const urls = val.split(',').map(s => s.trim()).filter(Boolean);
        if (urls.length === 0) {
            preview.innerHTML = `<span class="text-muted">Rəsimlər görünəcək</span>`;
            return;
        }
        preview.innerHTML = urls.map(url =>
            `<img src="${url}" alt="Rəsim" style="max-width:80px;max-height:80px;margin-right:4px;border-radius:6px;">`
        ).join('');
    }
    document.getElementById('cover').addEventListener('input', updateCoverPreview);
    document.getElementById('gameplayEmbed').addEventListener('input', updateGameplayPreview);
    document.getElementById('images').addEventListener('input', updateImagesPreview);
    // Initial preview on page load
    updateCoverPreview();
    updateGameplayPreview();
    updateImagesPreview();
    </script>

    
